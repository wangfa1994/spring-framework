	<bean id="myBeanPostProcessor"
		  class="com.wf.postprocess.bean.MyBeanPostProcessor"/>

	<bean id="myInstantiationAwareBeanPostProcessor"
		  class="com.wf.postprocess.bean.MyInstantiationAwareBeanPostProcessor"/>

	<bean id="myMergedBeanDefinitionPostProcessor"
		  class="com.wf.postprocess.bean.MyMergedBeanDefinitionPostProcessor"/>

	<!-- SmartInstantiationAwareBeanPostProcessor 内部专用接口 -->
	<bean id="mySmartInstantiationAwareBeanPostProcessor"
		  class="com.wf.postprocess.bean.MySmartInstantiationAwareBeanPostProcessor"/>

</beans>